<div class="homepage-hero-module">
  <div class="video-container">
    <div class="filter"></div>
    <div class="nav-header">
      <div class="row">
        <div class="col-md-offset-10 col-md-2">
          <% unless user_signed_in? %>
              <%= link_to "Sign In", new_user_session_path, class: "btn btn-default" %>
              <%= link_to "Sign Up", new_user_registration_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      </div>
    </div>
    <div class="welcome-header">
      <div class="row">
        <div class="col-md-12">
          <h1 class="header-text">Action Cable Demo App</h1>
        </div>
      </div>
    </div>
    <video autoplay loop class="fillWidth">
      <source src="/assets/Type.mp4" type="video/mp4" />Your browser does not support the video tag. I suggest you upgrade your browser.
      <source src="/assets/Type.webm" type="video/webm" />Your browser does not support the video tag. I suggest you upgrade your browser.
    </video>
    <div class="poster hidden">
      <%= image_tag('Type.jpg') %>
    </div>
  </div>
</div>


<div class="container">
  <div class="border-form-div">
    <div class="form-signin">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <h2 class="form-signin-heading">Sign up</h2>
          <%= f.text_field :first_name, class: "form-control", placeholder: "First Name",
                           :style => 'margin-bottom: -1px; border-top-left-radius: 4px; border-top-right-radius: 4px; border-bottom-right-radius: 0px;border-bottom-left-radius: 0px;' %>
          <%= f.text_field :last_name, placeholder: "Last Name", :class => 'form-control',
                           :style => 'margin-bottom: -1px; border-top-left-radius: 0; border-top-right-radius: 0; border-radius: 0px;' %>
          <%= f.email_field :email, :placeholder => 'Email address', :class => 'form-control',
                            :style => 'margin-bottom: -1px; border-top-left-radius: 0; border-top-right-radius: 0; border-radius: 0px;' %>
          <%= f.password_field :password, :placeholder => 'Password', :class => 'form-control', :style => 'margin-bottom: -1px; border-top-left-radius: 0; border-top-right-radius: 0; border-radius: 0px;' %>
          <%= f.password_field :password_confirmation, :placeholder => 'Password confirmation', :class => 'form-control' %>
          <div class="checkbox">
            <label>
              <input type="checkbox" value="remember-me"> Remember me
            </label>
          </div>
          <%= f.submit "Sign up", :class => 'btn btn-lg btn-primary btn-block', :style => 'margin-top: 10px;' %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>